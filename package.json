{
  "name": "spotlight-browser-extension",
  "displayName": "Spotlight Browser Extension",
  "version": "1.0.0",
  "description": "A Spotlight-like browser extension with configurable workflows",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:test": "plasmo build --target=chrome-mv3 --tag=prod",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mcp": "playwright test --project=chromium-mcp e2e/mcp-*.spec.ts",
    "test:e2e:mcp:ui": "playwright test --project=chromium-mcp --ui e2e/mcp-*.spec.ts",
    "test:e2e:mcp:headed": "playwright test --project=chromium-mcp --headed e2e/mcp-*.spec.ts",
    "test:mcp": "ts-node e2e/run-mcp-tests.ts",
    "test:all": "npm run test && npm run build:test && npm run test:e2e",
    "test:all:mcp": "npm run test && npm run build:test && npm run test:e2e:mcp"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "0.0.258",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.4.1",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "webRequest",
      "webNavigation",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "*.js",
          "*.css",
          "*.html"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}